        <record model="ir.ui.view" id="view_internal_control_report">
            <field name="name">stock.picking.list.artdeko</field>
            <field name="model">stock.picking</field>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">                
                <search string="Control interno">
                    <field name="name"/>
                    <field name="origin"/>
                    <field name="guide_number"/>
                    <field name="departure_date"/>
                    <field name="estimated_delivery_date"/>
                    <field name="delivery_date"/>
                    <field name="shipping_cost"/>
                    <field name="state"/>
                    <field name="priority" invisible="1"/>
                    <field name="picking_type_id" invisible="1"/>                    
                </search>
            </field>
        </record>
        <record id="action_internal_control_tree" model="ir.actions.act_window">
            <field name="name">Control interno</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{
                    'contact_display': 'partner_address',
            }
            </field>            
            <field name="search_view_id" ref="view_internal_control_report"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click here to create a new transfer.
              </p><p>
                You can either do it immediately or mark it as Todo for future processing. Use your scanner to validate the transferred quantity quicker.
              </p>
            </field>
        </record>
        
        <menuitem id="internal_control_menu" name="Control interno" parent="stock.menu_stock_warehouse_mgmt" sequence="6" action="action_internal_control_tree" groups="stock.group_stock_manager,stock.group_stock_user"/>     
        
        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form.inherit.artdeko</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">         
                <xpath expr="//field[@name='login']" position="after">
                    <label for="initials" string="Iniciales"/>
                    <h2><field name="initials"/></h2>
                    <label for="specifier_ok" string="Es especificador"/>
                    <field name="specifier_ok"  type="checkbox"  string="Especificador"/>                                  
                </xpath>                
            </field>
        </record>        
    </data>
</odoo>