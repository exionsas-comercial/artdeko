<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="artdeko_document_tax_totals" inherit_id="account.document_tax_totals">
        <xpath expr="//t[1]/tr[1]/td[1]" position="replace">
            <td><strong t-out="subtotal['name']"/>&#40;<span t-out="currency_name"/>&#41;</td>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]/td[1]" position="replace">
            <td><strong>Total</strong>&#40;<span t-out="currency_name"/>&#41;</td>
        </xpath>
    </template>    
</odoo>